<div class="row">
    <div class="col-md-8">
        <h1><%= @building.name.capitalize %> <%= render partial: 'partials/level', locals: { tier: @building.tier, level: @building.level } %></h1>
        <p><%= @building.description %></p>
    </div>
</div>
<% if @building.collect? %>
    <div class="row">
        <div class="col-md-8">
            <div class="progress" style="margin-top: 12px">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                     style="width: <%= 100 - (@building.collect_capacity.to_f - @building.collect_quantity.to_f) / @building.collect_capacity.to_f * 100 %>%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"><%= @building.collect_quantity %> / <%= @building.collect_capacity %></div>
            </div>
        </div>
        <div class="col-md-4">
            <%= link_to 'Collect', building_collect_path(@building.name), class: 'btn btn-primary btn-block', method: :post %>
        </div>
    </div>
<% end %>
<% unless @building_tier.nil? %>
    <div class="jumbotron" style="margin-top: 50px">
        <h2>Upgrade informations</h2>
        <hr>
        <div class="row">
            <div class="col-md-4">
                <p>Require resources for next upgrade:</p>
                <ul class="list-group">
                    <% @building_tier.each do |resource| %>
                        <li class="list-group-item justify-content-between">
                            <%= resource.name %>
                            <%= render partial: 'partials/resources_quantities',
                                       locals: { require_quantity: resource.quantity,
                                                 actual_quantity: @chief.quantity_of(resource.name) } %>
                        </li>
                    <% end %>
                </ul>
            </div>
            <div class="offset-md-4 col-md-4">
                <%= link_to 'Upgrade', building_upgrade_path(@building.name), class: 'btn btn-success btn-block', method: :post %>
            </div>
        </div>
    </div>
<% end %>